package workshop;

public class Solution {
    public int maxProfit(int prices[]) {
        int profit = 0,flag = 2;
        if(prices.length == 1){
            return 0;
        }
        for(int i = 0; i<prices.length;i++){
        	System.out.println("for");
            if(i!=flag){
                if(i==flag-2){
                    profit -= prices[i];
                }else{
                    profit += prices[i];
                }
            }else{
                flag+=2;
            }
        }
        return profit;
    }
    
    public static void main(String[] args){
        int arr[] = {1,2,3,0,2};
        Solution sol = new Solution();
        System.out.println(sol.maxProfit(arr));
    }
}