package heraldcollege;

import java.util.Scanner;
import java.util.regex.Pattern;

public class EmailVerify {
	
	String regisForEmail = "^[\\S]+[@]heraldcollege.edu.np"; // regex for email
	String regixPassword ="^[A-Z]+\\w+[\\@\\#\\$\\%\\+\\-]+\\w+[\\%\\+\\-\\#\\@\\$]+[A-Z]+\\w+\\d+"; // regex for password
	
	public static void main(String []args) {

		EmailVerify email = new EmailVerify();
		System.out.println(Pattern.matches(email.regisForEmail,"np03cs4s210050@heraldcollege.edu.np"));
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter a password:");
		String pass = sc.next();
		// Herald@#-787%College12 -- password to be used
		System.out.println(Pattern.matches(email.regixPassword, pass));
		
	}
}
